<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>index</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>user</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= image_tag post.user.get_profile_image, size:"100x100" %><br>
                <%= post.user.user_name %>
              </td>
              <td>
                <%= link_to post_path(post) do%>
                  <%= image_tag post.image, size:"100x100", class: "rounded" %>
                <% end %>
              </td>
              <td><%= post.body %></td>
              <td><%= render_with_hashtags(post.tag_body) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
