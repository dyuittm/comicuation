<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing user</h2>
      <%= form_with model: @user, local: true do |f| %>

        <div class="form-group">
          <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :first_name, class: 'form-control' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :name_kana %>
          <%= f.text_field :last_name_kana, class: 'form-control' %>
          <%= f.text_field :first_name_kana, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :user_name %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-outline-info' %>
          <%= link_to "Unsubscribe", unsubscribe_path, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
