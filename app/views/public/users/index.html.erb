<div class='container'>
  <div class='row'>
    <div class="col-md-12">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>groups</th>
            <th>posts</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image, size: "50x50" %><br>
                  <%= user.user_name %>
                <% end %>
              </td>
              <td><%= user.groups.count %></td>
              <td><%= user.posts.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
